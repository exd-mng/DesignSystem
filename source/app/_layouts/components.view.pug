                      block codeHeadBtn
            .row
              .col-xs.col-hd-8
                block codeBody
          .ds-tabs__panel.u-hidden(id="tab2")
            .row
              .col-xs.col-hd-8
                block use
          .ds-tabs__panel.u-hidden(id="tab3")
