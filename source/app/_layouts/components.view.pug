extends main.view.pug

block content
  .row
    .col-xs-offset-1.col-xs-10.col-md-12.col-md-offset-0
      header.ds-intro
        p.ds-intro__family
          | Componentes
        h2 #{title}
  .ds-tabs
    .row
      .col-xs-12.col-md-12.col-md-offset-0
        ul.ds-tabs__list
          li.ds-tabs__item
            a.ds-tabs__link.is-active(href="#tab1")
              | CÃ³digo
          li.ds-tabs__item
            a.ds-tabs__link(href="#tab2")
              | Uso
          li.ds-tabs__item
            a.ds-tabs__link(href="#tab4")
              | Ejemplos
    .row
      .col-xs-offset-1.col-xs-10.col-md-12.col-md-offset-0
