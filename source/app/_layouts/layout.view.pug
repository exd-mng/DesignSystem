extends main.view.pug

block content
	header.ds-intro
		.container
			.row
				.col-xs-offset-1.col-xs-10.col-md-12.col-md-offset-0.col-lg-offset-4.col-lg-8.col-hd-offset-3.col-hd-9
					if(family)
						p.ds-intro__family
							| #{family}
						h2 #{title}
					else
						h2.u-spacer--3 #{title}
					
					.row
						.col-xs.col-lg-9.col-hd-6
							.ds-headLine
								block codeHead
	.container
		.row
			if(tabs)
				.col-xs.col-lg-offset-4.col-lg-8.col-hd-offset-3.col-hd-9
					.ds-tabs
					.row
						.col-xs-12.col-md-12.col-md-offset-0
						ul.ds-tabs__list
							each tab, index in tabs
								li.ds-tabs__item
									if(index == 0)
										a.ds-tabs__link.is-active(href="#tab" + index)= tab
									else
										a.ds-tabs__link(href="#tab" + index)= tab


					.row
						.col-xs-offset-1.col-xs-10.col-md-12.col-md-offset-0
						.ds-tabs__content
							//each tab, index in tabs
								.ds-tabs__panel(id="tab" + index)
								.row
									.col-xs.col-lg-11.col-hd-8
										block tab											
										

							.ds-tabs__panel(id="tab1")
							.row
								.col-xs.col-lg-11.col-hd-8
								block codeBody
							.ds-tabs__panel.u-hidden(id="tab2")
							.row
								.col-xs.col-lg-11.col-hd-8
								block specification
							.ds-tabs__panel.u-hidden(id="tab3")
							.row
								.col-xs.col-lg-11.col-hd-8
								block advice
			else
				.col-xs-offset-1.col-xs-10.col-md-12.col-md-offset-0.col-lg-offset-4.col-lg-8.col-hd-offset-3.col-hd-9
					.row
						.col-xs.col-lg-11.col-hd-8
							block codeBody
		.row
			.col-xs-offset-1.col-xs-10.col-md-12.col-md-offset-0
				block paginator