mixin mngTabs(tabs,active)
	.c-mngTabs
		ul.c-mngTabs__list(role="tablist")
			each item,index in tabs
				if (index === active)
					li.c-mngTabs__item
						a.c-mngTabs__link.is-active(href="#tab"+index, role="tab")= item
				else
					li.c-mngTabs__item
						a.c-mngTabs__link(href="#tab"+index, role="tab")= item
		.c-mngTabs__content
			block

mixin mngTabsPanel(id,active)
	if(active)
		.c-mngTabs__panel(id="tab"+id)
			block
	else
		.c-mngTabs__panel.u-hidden(id="tab"+id)
			block