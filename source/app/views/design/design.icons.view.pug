block codeBody
	each ico in ICONS
		h3.tit.tit--h3= ico.title
		ul.o-grid__row
			- for (var i = 0; i < ico.range.length; i++)
				li.o-grid__col.o-grid__col--2
					div.ds-icon.u-flex.u-flex--col.u-flex--alignItemsCenter
						+svg-icon(ico.range[i].icon)(class="o-mngIco--x2")
						p.ds-icon__txt
							= ico.range[i].icon
block paginator
	- var next = "layout";
	- var prev = "grid";
