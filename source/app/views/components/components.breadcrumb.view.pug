extends ../../_layouts/components.view.pug

block config
	- var active = "Breadcrumb";
	- var title = active;

block codeHead
	:markdown-it
		Permite a los usuarios ver rápidamente su ubicación dentro de una ruta de navegación y pasar a un nivel principal. Se debe poder hacer clic en cada nivel de la ruta.

block codeBody
	section
		h3 HTML
		section
			.ds-sample.ds-sample--center
				+mngBreadCrumb()
			pre
				code.language-html
					:markdown-it
						<ol class="c-mngBreadCrumb">
							<li class="c-mngBreadCrumb__item"><a class="c-mngLink" href="#">Books</a></li>
							<li class="c-mngBreadCrumb__item"><a class="c-mngLink" href="#">Science Fiction</a></li>
							<li class="c-mngBreadCrumb__item"><a class="c-mngLink" href="#">Award Winners</a></li>
						</ol>	
		h3 HTML - Mobile
		section
			.ds-sample
				+mngBreadCrumbMobile()
			pre
				code.language-html
					:markdown-it
						<ol class="c-mngBreadCrumb c-mngBreadCrumb--mobile">
							<li class="c-mngBreadCrumb__item"><a class="c-mngLink" href="#">
								<svg class="o-mngIco o-mngIco--left o-mngIco--mr"><use xlink:href="../../../assets/icons/sprite.svg#left"></use></svg>Books</a>
							</li>
							<li class="c-mngBreadCrumb__item"><a class="c-mngLink" href="#">Science Fiction</a></li>
							<li class="c-mngBreadCrumb__item"><a class="c-mngLink" href="#">Award Winners</a></li>
						</ol>	

block specification
	section
		h3 Desktop - Tablet
		ul.ds-specs.row
			each val in [1,2]
				li.ds-specs__list.col-xs-12.col-md-6
					img(src="../../../assets/img/components/breadcrumb/specs/general/" + val + ".png", alt="")
	section
		h3 Mobile
		ul.ds-specs.row
			each val in [1,2]
				li.ds-specs__list.col-xs-12.col-md-6
					img(src="../../../assets/img/components/breadcrumb/specs/general/" + val + ".png", alt="")

block advice
	section
		h3 Recomendaciones generales
		ul.ds-list
			li.ds-list__item
				p Usar breadcrumbs cuando se diseñen sitios web que tengan 3 o más niveles de profundidad.
			li.ds-list__item
				p El breadcrumb no debe reemplazar la navegación primaria.
			li.ds-list__item
				p Puede aparecer un breadcrumb para mostrar que el usuario solo tiene un nivel de profundidad.
			li.ds-list__item
				p Los links de breadcrumb, independientes, actúan como si fuera un botón Atrás
			li.ds-list__item
				p Se debe mostrar la jerarquía, no el historial.
			li.ds-list__item
				p No usar breadcrumb si se lleva al usuario a través de un proceso de varios pasos.

		h3 Recomendaciones
		.ds-doDont
			each dodont in SAMPLEBREADCRUMB
				.row
					- for (var i = 0; i < dodont.info.length; i++)
						.col-xs-12.col-md-6.ds-doDont__box
							.ds-doDont__wrap
								img(alt="", src='../../../assets/img/components/breadcrumb/dodont/' + i + '.png').ds-doDont__img
							.ds-doDont__txt(class=dodont.info[i].uso === "Correcto" ? "ds-doDont__txt--do" : "ds-doDont__txt--dont")
								p
									span.ds-doDont__check= dodont.info[i].uso
									!= dodont.info[i].info

block paginator
	- var next = "checkbox";
	- var prev = "buttons";
	+paginatorNav("paginatorOptions",[
		{ 
			titPrev: "Botones",
			titNext:"Checkbox",
			familyPrev: "components",
			familyNext: "components"
		}
	])