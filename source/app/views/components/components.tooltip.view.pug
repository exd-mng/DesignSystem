extends ../../_layouts/components.view.pug

block config
	- var active = "Tooltip";
	- var title = active;

block codeHead
	:markdown-it
		Nos proporcionan información al pasar el ratón o enfocar sobre un objeto. Suelen contener texto auxiliar para ayudar a entender el documento. 

block codeBody
	section
		h3 HTML
		section
			h4 Desktop
			.row
				.col-xs-12.col-md-6 	
					.ds-sample
						//img(src="../../../assets/img/components/tooltip/code/1.png", alt="")
						+mngTooltip()(class="top")
							| Texto para el tooltip
				.col-xs-12.col-md-6 
					.ds-sample.ds-sample--inverse
						//img(src="../../../assets/img/components/tooltip/code/1.png", alt="")
						+mngTooltipReverse()(class="bottom")
							| Texto para el tooltip


block specification
	section
		h3 DESKTOP
		ul.ds-specs.row
			each val in [1,2,3,4]
				li.ds-specs__list.col-xs-12.col-md-6
					img(src="../../../assets/img/components/tooltip/specs/" + val + ".png", alt="")



block advice
	section
		h3 Recomendaciones
		.ds-doDont
			each dodont in SAMPLETOOLTIP
				.row
					- for (var i = 0; i < dodont.info.length; i++)
						.col-xs-12.col-md-6.ds-doDont__box
							.ds-doDont__wrap
								img(alt="", src='../../../assets/img/components/tooltip/dodont/' + i + '.png').ds-doDont__img
							.ds-doDont__txt(class=dodont.info[i].uso === "Correcto" ? "ds-doDont__txt--do" : "ds-doDont__txt--dont")
								p
									span.ds-doDont__check= dodont.info[i].uso
									!= dodont.info[i].info

block paginator
	- var next = "color";
	- var prev = "toogle";
	+paginatorNav("paginatorOptions",[
		{ 
			titPrev: "Color",
			titNext:"Tabs",
			familyPrev: "components",
			familyNext: "design"
		}
	])