	"SAMPLECHECKBOX": {
		"checkbox": {
			"info": [
				{
					"uso": "Correcto",
					"info": "Utiliza checkbox para permitir seleccionar más de un elemento de la lista."
				},
				{
					"uso": "Incorrecto",
					"info": "Si solo se puede seleccionar un solo elemento de la lista usar <a href=\"/app/views/components/components.radio.view.html\" class=\"c-mngLink\">Radio Button</a>."
				},
				{
					"uso": "Correcto",
					"info": "Por defecto, no debemos mostrar ningún valor preseleccionado."
				},
				{
					"uso": "Incorrecto",
					"info": "Las etiquetas de texto deben aparecer a la derecha del checkbox."
				},
				{
					"uso": "Correcto",
					"info": "Usar un checkbox principal para agrupar una lista con múltiples opciones. Esto permitirá seleccionar o deseleccionar fácilmente todos los elementos."
				},
				{
					"uso": "Correcto",
					"info": "Cuando el check principal esté desmarcado, todas los checkbox secundarias estarán desmarcadas."
				},
				{
					"uso": "Correcto",
					"info": "Si se seleccionan solo algunas opciones, el checkbox principal debe convertirse en una casilla indeterminada."
				},
				{
					"uso": "Correcto",
					"info": "Los títulos de las etiquetas tienen que ser cortos (no más de 3 palabras) y bien definidos facilitando al usuario la toma de decisión."
				}
			]
		}
	},
